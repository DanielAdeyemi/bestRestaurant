@{
    Layout = "_Layout";
}

@using RestaurantFinder.Models;
@model RestaurantFinder.Models.Restaurant;

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @required="required"})
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description, new { @required="required"})
    @Html.LabelFor(model => model.Hours)
    @Html.TextBoxFor(model => model.Hours, new {@maxlength="20", @required="required"})
    @Html.LabelFor(model => model.NumberOfEmployees, "Number of Employees", new { @required="required"})
    @Html.TextBoxFor(model => model.NumberOfEmployees, new { @type="number", @min=1, @required="required"})
    @Html.LabelFor(model => model.Cuisine)
    @Html.DropDownListFor(model => model.Cuisine.Name, new SelectList(Enum.GetValues(typeof(Name))), "Select Cuisine type:", new { @class = "form-control", @required="required"})
    <input type="submit" value="Create" class="btn btn-dark"/>
}

<button class="btn btn-dark">@Html.ActionLink("Return to home", "Index", "Home")</button>
<button class="btn btn-dark">@Html.ActionLink("Return to Restaurants", "Index")</button>