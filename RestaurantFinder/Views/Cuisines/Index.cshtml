@{
    Layout = "_Layout";
}

@using RestaurantFinder.Models;
@model ICollection<RestaurantFinder.Models.Cuisine>;

<h1>All Cuisines</h1>
@if (Model.Count == 0)
{
    <h3>No Cuisines Have been added yet!</h3>
}

@foreach (Cuisine cuisine in Model)
{
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
}

<button class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</button>
<button class="btn btn-success">@Html.ActionLink("Create", "Create")</button>
<button class="btn btn-danger">@Html.ActionLink("Delete all", "DeleteAll")</button>